<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8CBB2F47"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_words"
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:background="#8C7367E0"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:text=" Welcome To Egypt                       اهلا بكم في مصر"
            android:textColor="#1F6B22"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Text_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Size"
                android:textColor="#131316"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="14"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_big"
                android:layout_width="57dp"
                android:layout_height="wrap_content"

                android:background="#54525A45"
                android:text="+"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_small"
                android:layout_width="54dp"
                android:layout_height="wrap_content"

                android:background="#54525A45"
                android:text="-"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/ch_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Bold"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/ch_under"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uline"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="#54525A45"
                android:text="Color"
                android:textColor="#110C0C"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/sp_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="#54525A45"
                android:text="Font"
                android:textColor="#271717"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/sp_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AlignMent :"
                android:textColor="#2C1C1C"
                android:textSize="24sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/r_ltr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Left To Right"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/r_rtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Right To Left"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/r_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Center"
                    android:textColor="#0E0D0D"
                    android:textSize="24sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="File Name"
                android:textColor="#0A0909"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edit_file"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="    File Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00394AE6"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_new"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Get File"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>